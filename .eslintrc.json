{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "presets": ["es2015", "es2017"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "keyword-spacing": ["error", { "before": true }],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-cond-assign": ["error", "always"],
        "no-console": "off"
    }
}
